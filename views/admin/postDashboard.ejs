<div id="content" class="p-4 p-md-5 pt-5">
    <h2 class="mb-4">Add post</h2>

    <div class="container">
        <form action=""  method="POST">
            <div class="row">
                <div class="col-sm-12">
                    <h5>Title</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <input type="text" name="title" required placeholder="enter post Title" class="w-50">
                </div>
            </div>


            <div class="row mt-3">
                <div class="col-sm-12">
                    <h5>Content</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <textarea name="content" id="" cols="30" rows="5" placeholder="enter post here" required class="w-50"></textarea>
                </div>
            </div>


           
            <div class="row">
                <div class="col-sm-12">
                    <input type="submit" value="Add Post" class="btn btn-primary">
                </div>
            </div>
        </form>
    
      </div>
    
  </div>



